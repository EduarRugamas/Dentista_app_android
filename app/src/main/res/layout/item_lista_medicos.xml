<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    app:cardCornerRadius="10dp"
    app:cardElevation="12dp"
    android:layout_marginTop="15dp"
    android:layout_marginBottom="20dp"
    android:layout_marginStart="20dp"
    android:layout_marginEnd="20dp">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/background_resource"
        >

        <TextView
            android:id="@+id/nombre"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/item_nombre"
            android:textSize="19sp"
            android:textStyle="bold"
            android:textColor="@color/blanco"
            android:layout_marginTop="10dp"
            android:layout_marginStart="15dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            />

        <TextView
            android:id="@+id/text_medicos_nombre"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="lista medicos"
            android:textSize="19sp"
            android:textColor="@color/blanco"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toEndOf="@id/nombre"
            android:layout_marginStart="55dp"
            android:layout_marginTop="10dp"
            />

        <TextView
            android:id="@+id/especialidad"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/item_especialidad_medicos"
            android:textStyle="bold"
            android:textSize="19sp"
            android:textColor="@color/blanco"
            app:layout_constraintTop_toBottomOf="@id/nombre"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="10dp"
            android:layout_marginStart="15dp"
            />

        <TextView
            android:id="@+id/text_medicos_especialidad"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="lista medicos"
            android:textSize="19sp"
            android:textColor="@color/blanco"
            app:layout_constraintTop_toBottomOf="@id/text_medicos_nombre"
            app:layout_constraintStart_toEndOf="@id/especialidad"
            android:layout_marginStart="15dp"
            android:layout_marginTop="10dp"
            />

        <TextView
            android:id="@+id/medicos_horario"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/item_horario_medicos"
            android:textSize="19sp"
            android:textStyle="bold"
            android:textColor="@color/blanco"
app:layout_constraintTop_toBottomOf="@id/especialidad"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="15dp"
            android:layout_marginTop="10dp"
            />
        <TextView
            android:id="@+id/text_medicos_horarios"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="lista medicos"
            android:textSize="19sp"
            android:textColor="@color/blanco"
app:layout_constraintTop_toBottomOf="@id/text_medicos_especialidad"
            app:layout_constraintStart_toEndOf="@id/especialidad"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="10dp"
            android:layout_marginStart="15dp"
            android:layout_marginTop="10dp"
            />

    </androidx.constraintlayout.widget.ConstraintLayout>



</androidx.cardview.widget.CardView>