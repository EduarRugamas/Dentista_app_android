<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    app:cardCornerRadius="10dp"
    app:cardElevation="12dp"
    android:layout_marginTop="15dp"
    android:layout_marginBottom="20dp"
    android:layout_marginStart="20dp"
    android:layout_marginEnd="20dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/background_resource">

        <TextView
            android:id="@+id/text_medicamento_nombre"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:textColor="@color/blanco"
            android:textSize="20sp"
            tools:text="Medicamento"
            android:layout_marginTop="15dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"

            />

        <ImageView
            android:id="@+id/image_lista_medicamentos"
            android:layout_width="150dp"
            android:layout_height="150dp"
            app:layout_constraintTop_toBottomOf="@id/text_medicamento_nombre"
            app:layout_constraintStart_toStartOf="parent"
            android:contentDescription="@string/app_name"
            android:layout_marginStart="30dp"
            android:layout_marginTop="15dp"
            tools:src="@drawable/ic_launcher_background"
            />

        <TextView
            android:id="@+id/medicamento_precio"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/blanco"
            android:textSize="19sp"
            android:textStyle="bold"
            android:text="@string/item_medicamento_precio"
            android:layout_marginTop="70dp"
            app:layout_constraintStart_toEndOf="@id/image_lista_medicamentos"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"

            />
        <TextView
            android:id="@+id/text_medicamento_precio"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="$4.00"
            android:textColor="@color/blanco"
            android:textSize="19sp"
            android:layout_marginTop="10dp"
            app:layout_constraintTop_toBottomOf="@id/medicamento_precio"
            app:layout_constraintStart_toEndOf="@id/image_lista_medicamentos"
            app:layout_constraintEnd_toEndOf="parent"
            />

        <TextView
            android:id="@+id/text_medicamentos_descripcion"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:textAlignment="center"
            android:textColor="@color/blanco"
            android:layout_marginTop="10dp"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:layout_marginBottom="15dp"
            app:layout_constraintTop_toBottomOf="@id/image_lista_medicamentos"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            />





    </androidx.constraintlayout.widget.ConstraintLayout>



</androidx.cardview.widget.CardView>